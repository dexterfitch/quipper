<div class="col-md-3">
  <h2>Compose Quip</h2>
  {{#if isPosting}}
    <form>
      <div class="form-group">
        {{textarea id="body" value=body class="form-control" placeholder="Penny for your thoughts" maxlength="141"}}
      </div>

      <button class="btn btn-primary" {{action 'save'}}>Save</button>
    </form>
  {{else}}
    <button class="btn btn-primary" {{action 'post'}}>Add</button>
  {{/if}}
</div>

<div class="col-md-6">
  <h2>Recent</h2>
  {{#each quip in sortedQuips itemController="quip"}}
    <div class="quip-post" {{action 'expandToggle'}}>
      <p>
        {{quip.body}}
        {{#if quip.isExpanded}}
          <br>
          {{quip.date}}
        {{/if}}
      </p>
    </div>
  {{/each}}
</div>

<div class="col-md-3">
</div>

